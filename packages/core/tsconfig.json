{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node",
      "react"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./dist/lib",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "newLine": "lf"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types"
  ],
  "exclude": [
    "node_modules",
    "**/dist/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "src/__mocks__/**/*"
  ]
}